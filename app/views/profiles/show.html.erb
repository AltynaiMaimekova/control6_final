<h1><%= @user.user_name %>'s profile
<% if @user == current_user %>
	<%=link_to 'Edit', edit_user_registration_path(@user), :class => "btn btn-success" %>
<% end %>
</h1>
<h3>My photos 
<% if @user == current_user %>
	<%= link_to 'Create new photo', new_post_path, :class => "btn btn-success" %></h3>
<% end %>	

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to (image_tag post.image.url(:thumb)), post_path(post) %></td>
        <td><%= link_to post.caption, post_path(post) %></td>
        <% if @user == current_user %>
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= paginate @posts %>
