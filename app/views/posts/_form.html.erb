<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3">
	<%= simple_form_for(@post) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	    <%= f.input :caption %>
	    <%= f.input :image %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
	</div>
</div>

